    for($sels in $advJnt){
        if (`objExists ($jntType[$i]+$sels)`) {
            string $dry = `getAttr ($jntType[$i]+$sels+".drawStyle")`;
            if ($dry == 0 ){
                setAttr ($jntType[$i]+$sels+".drawStyle") 2;
            }else{
                setAttr ($jntType[$i]+$sels+".drawStyle") 0;
            }
        }
    }
}

}

