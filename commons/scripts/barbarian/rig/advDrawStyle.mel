global proc hiddenJnt(){

//隐藏所有的骨骼
string $allJnt[] = `ls -type "joint"`;
for($sels in $allJnt){
    string $dry = `getAttr ($sels+".drawStyle")`;
    if($dry == 0){
        setAttr ($sels+".drawStyle") 2;
    }
}

}

